<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:e="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
        xmlns:global="clr-namespace:"
        mc:Ignorable="d"
        Title="MaterialDesignDemo" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="ItemsControl" BasedOn="{x:Null}">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate DataType="{x:Type local:Control_Definition}">
                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition SharedSizeGroup="A" />
                                <ColumnDefinition SharedSizeGroup="b"/>
                                <ColumnDefinition SharedSizeGroup="c"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" Margin="10" Content="{Binding Control}" />
                            <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray">
                                <global:MvvmTextEditor x:Name="Editor" Margin="10,0,0,0" SyntaxHighlighting="XML" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Consolas" IsReadOnly="True" Grid.Column="1" Text="{Binding XAML}" />
                            </Border>
                            <Button ToolTip="Copy code" Grid.Column="2" Tag="{Binding Path=Text, ElementName=Editor}">
                                <materialDesign:PackIcon Kind="ContentCopy"></materialDesign:PackIcon>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Grid.IsSharedSizeScope" Value="True"></Setter>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}" >
            <EventSetter Event="Click" Handler="CopyButtonEventSetter_OnHandler"></EventSetter>
        </Style>
    </Window.Resources>
    <Grid   >
        <ItemsControl x:Name="ListView" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <materialDesign:Snackbar x:Name="Snackbar"></materialDesign:Snackbar>
    </Grid>
</Window>































































