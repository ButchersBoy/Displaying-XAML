<UserControl x:Class="CodeDisplayer.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeDisplayer"
             mc:Ignorable="d" HorizontalAlignment="Center">
    <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="15" FontWeight="DemiBold">Search code : </TextBlock>
            <TextBox x:Name="SearchBox" Width="200" Margin="5"></TextBox>
        </StackPanel>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Label>Display Code :</Label>
            <ToggleButton x:Name="IsCodeDisplayedToggleButton" IsChecked="True" HorizontalAlignment="Right" />
        </DockPanel>
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Label>Orientation :</Label>
            <ToggleButton x:Name="OrientationToggleButton" HorizontalAlignment="Right" />
        </DockPanel>
    </StackPanel>
</UserControl>



